@model IEnumerable<Company>
@{
    ViewData["Title"] = "Companies";
}

<div class="row page-box">
    <div class="col-sm-12">
        <h2>Companies list</h2>
        @using (Html.BeginForm("Index", "Company", FormMethod.Get))
        {
            <div class="input-group col-md-12" style="margin-bottom: 14px">
                <input type="text" class="form-control" placeholder="Search companies by names..." name="search" id="search" />
                <span class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        }
        <table class="table table-striped table-hover">
            <tbody>
                @foreach (var company in Model.OrderBy(o => o.Name))
                {
                    <tr>
                        <td>@Html.ActionLink(company.Name, "Details", new { id = company.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Create new company", "Create", "Company", null, new { @class = "btn btn-primary" })
    </div>
</div>